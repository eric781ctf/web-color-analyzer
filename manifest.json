{
  "manifest_version": 1,
  "name": "Web Color Analyzer",
  "description": "Click any element to check its background/text color contrast and WCAG compliance.",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "clipboardWrite"],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Check contrast",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["wcag.js", "content.js"],
      "css": ["style.css"]
    }
  ]
}